.wrapper
 .chat-side
  = render partial: "shared/side_bar"
 .chat-main
  .main-header
   .current-group
    %h2.current-group_name
     hi
    %ul.member-list
     %li.member-list_member
      test
   %a 
    %div.main-header_edit-btn
     = link_to edit_group_path(current_user) do
      Edit

  .messages
   #data-message_id.message
    %p.upper-info_user
     shiro
    %p.message_text
     coachella
  .form
   %form#new_message.new-message
    .input-box
     %input#message_content.input-box_text{placeholder: "type a message", type: "text", name: "message[content]"}
     %label.image-label
      %i.fa.fa-image
      %input#message_image.image-label_input{type: "file", name: "message[image]"}
    %input.new-message_submit-btn{type: "submit", name: "commit", value: "Send"} 
     
